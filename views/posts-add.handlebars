<!-- Post Add -->
<div class='card row no-gutters'>
  <div class='card col-12'>
    <div class='card-header' style='background-color: #e3f2fd;'>New Post</div>
    <div class='card-body'>
      <form class='form' action='/api/posts' method='POST' role='form'>
        {{#if logged_in}}
          <div class='form-group'>
            <input
              class='form-control'
              type='hidden'
              id='action'
              name='action'
              value='2'
            />
          </div>
          <div class='form-group'>
            <input
              class='form-control'
              type='hidden'
              id='userId'
              name='userId'
              value='{{user_id}}'
            />
          </div>
          <div class='form-group'>
            <label for='title'>Title:</label>
            <input class='form-control' type='text' id='title' name='title' />
          </div>
          <div class='form-group'>
            <label for='contents'>Contents:</label>
            <textarea
              class='form-control'
              type='text'
              id='contents'
              name='contents'
              rows='3'
            ></textarea>
          </div>
          <div class='form-group'>
            <button
              type='submit'
              class='btn btn-outline-primary btn-sm post-form-submit my-2 my-sm-0'
            ><i class='far fa-save'> Submit</i></button>
            <a
              class='btn btn-outline-primary btn-sm my-2 my-sm-0'
              href='/'
              role='button'
            ><i class='fas fa-umbrella'> Cancel</i></a>
          </div>
        {{else}}
          <div class='form-group'>
            <a
              class='btn btn-outline-primary btn-sm my-2 my-sm-0'
              href='/'
              role='button'
            ><i class='fas fa-umbrella'> Cancel</i></a>
          </div>
        {{/if}}
      </form>
    </div>
  </div>
</div>
{{! <script src='/js/posts.js'></script> }}
<!-- End of Post Add -->